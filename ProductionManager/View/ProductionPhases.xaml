<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProductionManager.View"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf" x:Class="ProductionManager.View.ProductionPhases"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Height="30" Orientation="Horizontal">
            <TextBox Width="200" x:Name="phaseName" />
            <Button x:Name="addPhaseButton" Content="Add" Width="50"
                    Command="{Binding DataContext.AddPhaseCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                    CommandParameter="phaseName"/>
        </StackPanel>
        <DataGrid x:Name="ProductionPhasesGrid" AutoGenerateColumns="True" ItemsSource="{Binding ProductionPhases}" />
    </DockPanel>
</UserControl>
